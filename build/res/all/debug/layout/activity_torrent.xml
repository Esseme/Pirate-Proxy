<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TorrentActivity" >

    <TextView
        android:id="@+id/torrenttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="8dp"
	    android:textSize="18sp"
	    android:textIsSelectable="true" />

    <TextView
        android:id="@+id/torrentseeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torrenttitle"
        android:padding="8dp"
	    android:textIsSelectable="false" />

    <TextView
        android:id="@+id/torrentleeches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torrenttitle"
        android:layout_toRightOf="@+id/torrentseeds"
        android:padding="8dp"
	    android:textIsSelectable="false" />

    <TextView
        android:id="@+id/torrentfiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torrenttitle"
        android:layout_alignParentRight="true"
        android:padding="8dp"
	    android:textIsSelectable="false" />

    <TextView
        android:id="@+id/torrentuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torrentseeds"
        android:padding="8dp"
	    android:textIsSelectable="false" />

    <TextView
        android:id="@+id/torrentsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torrentfiles"
        android:layout_alignParentRight="true"
        android:padding="8dp"
	    android:textIsSelectable="false" />

    <TextView
        android:id="@+id/torrentdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torrentuser"
        android:padding="8dp"
	    android:textIsSelectable="false" />

    <TextView
        android:id="@+id/torrentdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torrentdate"
        android:padding="8dp"
	    android:textIsSelectable="true" />

    <ListView
        android:id="@+id/commentlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/torrentdetails"
        android:paddingTop="8dp" />

</RelativeLayout><!-- From: file:/home/gavin/workspace/PirateBay/res/layout/activity_torrent.xml -->