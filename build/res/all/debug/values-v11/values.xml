    <color name="light">#FFFFFF</color>

    <style name="app" parent="android:Theme.Holo.Light">
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:imageButtonStyle">@style/button</item>
        <item name="android:editTextStyle">@style/editor</item>
        <item name="android:autoCompleteTextViewStyle">@style/editor</item>
        <!-- <item name="android:alertDialogStyle">@style/dialog</item> -->
        <item name="android:windowBackground">@color/light</item>
